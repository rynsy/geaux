package p53csx

func genIndent(a int) {
    var i int = 0;
    for i < a {
        print "\t";
        i = i + 1;
    }
}

func pagename(i int) {
    genIndent(i);
    print "Sample Website\n";
}
func text(i int) {
    genIndent(i);
    print "Hello world!\n";
}
func h1(i int) {
    genIndent(i);
    print "<h1>\n";
    text(i+1);
    genIndent(i);
    print "</h1>\n";
}
func title(i int) {
    genIndent(i);
    print "<title>\n";
    pagename(i+1);
    genIndent(i);
    print "</title>\n";
}
func head(i int) {
    genIndent(i);
    print "<head>\n";
    title(i+1);
    genIndent(i);
    print "</head>\n";
}
func body(i int) {
    genIndent(i);
    print "<body>\n";
    h1(i+1);
    genIndent(i);
    print "</body>\n";
}
func html() {
    print "<html>\n";
    head(1);
    body(1);
    print "</html>\n";
}

func main() {
    print "Testing Program p53csx", "\n";
    print "Using nested function calls to make simple HTML doc: \n";
    html();
    print "\nTest completed", "\n";
} // func main
// package p53csx
